{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "es2021",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": ["app/types/*"]
    },
  },
  "exclude": ["node_modules"],
  "include": ["app/**/*", "__tests__/**/*"]
}
